<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.field_localization_demonstration.LanguageSelectionController"
          hgap="10" vgap="10" alignment="CENTER">

    <!-- Language Selection -->
    <Label fx:id="selectLanguageLabel" text="Select Language:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="languageComboBox" onAction="#onLanguageChange" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- Employee Information Fields -->
    <Label fx:id="firstNameLabel" text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label fx:id="lastNameLabel" text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label fx:id="emailLabel" text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Buttons Row -->
    <HBox spacing="5" alignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button fx:id="saveButton" text="Save" onAction="#onSaveButtonClick"/>
        <Button fx:id="resetButton" text="Reset" onAction="#onResetButtonClick"/>
        <Button fx:id="closeButton" text="Close" onAction="#onCloseButtonClick"/>
    </HBox>

</GridPane>
